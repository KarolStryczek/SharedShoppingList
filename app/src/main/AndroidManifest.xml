<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.agh.shopping_split">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shopping_split"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".balance.BalanceListActivity"
            android:exported="false" />
        <activity
            android:name=".receipt.ReceiptListActivity"
            android:exported="false" />
        <activity
            android:name=".payment.CreatePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".payment.PaymentListActivity"
            android:exported="false" />
        <activity
            android:name=".list.products.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".list.products.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".list.choose.CreateListActivity"
            android:exported="false" />
        <activity
            android:name=".list.choose.JoinListActivity"
            android:exported="false" />
        <activity
            android:name=".list.choose.NewListActivity"
            android:exported="false" />
        <activity
            android:name=".list.choose.ChooseListActivity"
            android:exported="false" />
        <activity
            android:name=".register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>